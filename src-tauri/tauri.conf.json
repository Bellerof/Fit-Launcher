{
    "package": {
      "productName": "Fitgirl Repack Launcher",
      "version": "1.0.0"
    },
    "build": {
      "distDir": "../dist",
      "devPath": "http://localhost:1420/",
      "beforeDevCommand": "npm run dev",
      "beforeBuildCommand": "npm run build"
    },
    "tauri": {
      "bundle": {
        "active": true,
        "windows": {
          "webviewInstallMode": {
            "type": "downloadBootstrapper"
          }
        },
        "identifier": "com.fitgirl-repacks-launcher.bundle",
        "icon": [
          "./icons/32x32.png",
          "./icons/128x128.png",
          "./icons/128x128@2x.png",
          "./icons/icon.icns",
          "./icons/icon.ico"
        ]
      },
      "allowlist": {
        "all": true,
        "path": {
          "all": true
        },
        "fs": {
          "all":true,
          "scope": ["$APPDATA/**", "$APPCONFIG/**", "$CONFIG/**", "$APP/**", "$APPCONFIG/tempGames/**", "$APPCONFIG/data/**","$APPCONFIG/sitemaps/**"]
        },
        "protocol": {
          "asset": true,
          "assetScope": ["$APPCONFIG/sitemaps/**"]
        }
      },
      "windows": [
        {
          "label": "main",
          "title": "Fitgirl Repack Launcher",
          "width": 800,
          "height": 800,
          "resizable": true,
          "transparent": true,
          "fullscreen": false,
          "decorations": false,
          "visible": false
        },
        {
           "label": "splashscreen",
           "url": "splashscreen.html",
           "width": 400,
           "height": 400,
           "decorations": false,
           "transparent": true,
           "alwaysOnTop": true,
           "center": true
        }
      ],
      "security": {
        "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
      }
    }
  }